<Window x:Class="SoccerApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SoccerApp"
        mc:Ignorable="d"
        Title="Inicio"
        Height="500" Width="800">
    <Grid>
        <Menu VerticalAlignment="Top">
            <MenuItem Header="Equipo">
                <MenuItem Header="Agregar" Click="Agregar_Click"/>
                <MenuItem Header="Listar Todos" Click="ListarTodo_Click"/>
            </MenuItem>
            <MenuItem Header="Acerca de" Click="AcercaDe_Click"/>
        </Menu>

        <Grid HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Text="¡Bienvenido a SoccerApp!" 
                   FontSize="24" 
                   FontWeight="Bold" 
                   />
        </Grid>

        <ContentControl x:Name="MainContent" Margin="0,18,0,0"/>
    </Grid>
</Window>
